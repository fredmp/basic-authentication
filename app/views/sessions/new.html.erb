<div class="login-box">
  <h1><%= t(:login) %></h1>

  <div class="content">
    <%= form_for(:session, url: login_path) do |f| %>

      <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
      <% elsif flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit t(:login) %>

    <% end %>

  </div>
</div>
